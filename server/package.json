{
  "name": "jkopay-fullstack-homework-server",
  "version": "1.0.0",
  "description": "JKOPay Fullstack Homework Server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:show:dev": "dotenv -e .env.development -- npm run typeorm migration:show -- -d src/infrastructure/database/typeorm.config.ts",
    "migration:run:dev": "dotenv -e .env.development -- npm run typeorm migration:run -- -d src/infrastructure/database/typeorm.config.ts",
    "migration:revert:dev": "dotenv -e .env.development -- npm run typeorm migration:revert -- -d src/infrastructure/database/typeorm.config.ts",
    "migration:show:prod": "dotenv -e .env.production -- npm run typeorm migration:show -- -d src/infrastructure/database/typeorm.config.ts",
    "migration:run:prod": "dotenv -e .env.production -- npm run typeorm migration:run -- -d src/infrastructure/database/typeorm.config.ts",
    "migration:revert:prod": "dotenv -e .env.production -- npm run typeorm migration:revert -- -d src/infrastructure/database/typeorm.config.ts",
    "seed:dev": "dotenv -e .env.development -- ts-node src/scripts/seed.ts",
    "seed:prod": "dotenv -e .env.production -- ts-node src/scripts/seed.ts",
    "generate:swagger": "ts-node src/scripts/generate-swagger.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/helmet": "^0.0.48",
    "@types/hpp": "^0.2.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.24",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
